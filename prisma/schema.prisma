// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  firstName String
  lastName String
  bday String?
  address String?
  phoneNumber String?
  about String?
  mainTitle String?
  summary String?
  website String?
}

model Skill{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  userId String @db.ObjectId
}